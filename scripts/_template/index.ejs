<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <link rel="icon" href="/favicon.ico" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= app.name %> | <%= main.name %>
  </title>
  <% if (appType==='main' ) { %>
    <link rel="stylesheet" href="./scripts/_template/index.css" />
    <% } %>
</head>

<body class="flex flex-col min-h-screen">
  <header class="bg-slate-700 text-white p-4">
    <nav class="container mx-auto flex justify-between flex-row flex-wrap gap-x-4 gap-y-1">
      <a href="<%= main.href %>">
        <%= main.name %>
      </a>

      <% if (appType !=='main' ) { %>
        <span class="flex-grow">
          <%= app.name %>
        </span>
        <% } %>

          <a href="https://sujeet.pro">sujeet.pro</a>

    </nav>
  </header>

  <% if (appType==='app' ) { %>
    <div id="root" class="flex-grow">Loading...</div>
    <% } else if (appType==='main' ) { %>
      <main class="container mx-auto p-8 flex-grow">
        <ul class="space-y-4">
          <% apps.forEach(function(app) { %>
            <li><a href="<%= app.href %>" class="text-blue-500 hover:underline">
                <%= app.name %>
              </a></li>
            <% }); %>
        </ul>
      </main>
      <% } %>

        <footer class="bg-slate-700 text-white p-4">
          <p class="text-center">&copy;
            <script>document.write(new Date().getFullYear());</script> Sujeet
          </p>
        </footer>

        <% if (appType==='app' ) { %>
          <script type="module" src="./index.tsx"></script>
          <% } %>

</body>

</html>